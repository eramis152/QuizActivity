<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Felicidades! Has completado el quiz"
        android:textSize="34sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/correct_count_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correctas: "
        android:textSize="24sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/incorrect_count_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incorrectas: "
        android:textSize="24sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/percentage_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Porcentaje de aciertos: "
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/restart_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hacer de Nuevo" />


</LinearLayout>
